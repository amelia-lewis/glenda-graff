doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Muli:300,400')
      link(href='//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css', rel='stylesheet')
      link(rel='stylesheet', href='/styles/style.css')
      link(rel="shortcut icon", type="image/x-icon", href="/favicon.ico")
  
  body(class=bodyclass)
    header.header
      .content-wrap
        block header
          .logo
            h1
              a(href=locals.url)= locals.name

          .nav
            ul
              for href, title in locals.nav
                - var _href  = page && page.filepath.relative.split("/")[0];
                - var active = page && href.match(_href);

                li(class=(active ? "active" : ""))
                  a(href=href)= title
    
    #content
      block content
    
    footer
      .content-wrap
        block footer
          .copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; website by&nbsp;
              a(href='https://amelialewis.com.au') Amelia Lewis

    include partials/scripts